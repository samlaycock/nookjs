{
  "name": "nookjs",
  "version": "0.1.0",
  "description": "A fast(ish), standards-compliant JavaScript/TypeScript(ish) parser and interpreter written in TypeScript.",
  "homepage": "https://nookjs.dev",
  "license": "MIT",
  "files": [
    "dist"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    }
  },
  "publishConfig": {
    "provenance": true
  },
  "scripts": {
    "lint": "oxlint . --type-aware",
    "lint:fix": "oxlint . --type-aware --fix",
    "fmt": "oxfmt .",
    "fmt:check": "oxfmt . --check",
    "typecheck": "tsc --noEmit",
    "build": "tsdown",
    "benchmark": "bun run benchmarks/interpreter.ts",
    "benchmark:parse": "bun run benchmarks/parser-compare.ts",
    "benchmark:parse:micro": "bun run benchmarks/parser-micro.ts",
    "benchmark:parse:profile": "bun run benchmarks/parser-profile.ts",
    "benchmark:all": "bun run benchmarks/index.ts",
    "ci:publish": "bun run build && changeset publish"
  },
  "devDependencies": {
    "@changesets/cli": "2.29.8",
    "@types/bun": "latest",
    "meriyah": "7.0.0",
    "oxfmt": "0.26.0",
    "oxlint": "1.41.0",
    "oxlint-tsgolint": "0.11.1",
    "tsdown": "0.20.0-beta.4"
  },
  "peerDependencies": {
    "typescript": "^5"
  }
}
